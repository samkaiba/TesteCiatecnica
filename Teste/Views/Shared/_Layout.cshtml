<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teste</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Clientes" asp-action="Index">Teste</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Teste
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/Scripts/ezBSAlert.js" asp-append-version="true"></script>
    <script src="~/Scripts/ValidaCNPJ.js" asp-append-version="true"></script>
    <script src="~/Scripts/ValidaCPF.js" asp-append-version="true"></script>
    <script src="~/Scripts/ViaCEP.js" asp-append-version="true"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            jQuery(function ($) {
                var options = {
                    translation: {
                        'A': { pattern: /[A-Z]/ },
                        'a': { pattern: /[a-z]/ }
                    }
                }

                $("#CNPJ").mask("00.000.000/0000-00", { reverse: true });

                $('#CPF').mask('000.000.000-00', { reverse: true });

                $("#UF").mask("AA", options);
                $("#Numero").mask("99990");

                $("#CEP").mask("00000-000");
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
